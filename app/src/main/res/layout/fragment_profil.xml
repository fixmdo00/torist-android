<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/background" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:src="@drawable/logo2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="30dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:text="Profil"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Username :" />

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="#EAEAEA"
                android:paddingHorizontal="10dp"
                android:text="fixmdo00"
                android:textSize="20sp"
                android:paddingVertical="5dp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Nama :" />

            <TextView
                android:id="@+id/tvNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="#EAEAEA"
                android:paddingHorizontal="10dp"
                android:text="Fernando Rindorindo"
                android:textSize="20sp"
                android:paddingVertical="5dp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Nomor Telp :" />

            <TextView
                android:id="@+id/tvTelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="#EAEAEA"
                android:paddingHorizontal="10dp"
                android:text="085155308186"
                android:textSize="20sp"
                android:paddingVertical="5dp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Alamat :" />

            <TextView
                android:id="@+id/tvAlamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="#EAEAEA"
                android:paddingHorizontal="10dp"
                android:text="8W46+99C, Kembuan, Tondano Utara, Minahasa Regency, North Sulawesi"
                android:textSize="20sp"
                android:paddingVertical="5dp"
                />
            <Button
                style="@style/Button.Profile"
                android:id="@+id/btnToko"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Toko Saya"
                android:textColor="#5E5E5E"
                android:textSize="18sp"
                />

            <Button
                style="@style/Button.Keluar"
                android:id="@+id/btnKeluar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="#5E5E5E"
                android:text="Keluar"
                android:textSize="18sp"
                />
        </LinearLayout>


    </LinearLayout>



</FrameLayout>
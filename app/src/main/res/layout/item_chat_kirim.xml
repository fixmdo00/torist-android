<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">
    <TextView
        android:id="@+id/itemChatKirimTvChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_item_chat_kirim"
        android:padding="12dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="Halo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8"
        />

    <TextView
        android:id="@+id/itemChatKirimTvWaktu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12 april"
        android:textSize="10sp"
        android:textColor="@color/grey"
        app:layout_constraintTop_toBottomOf="@+id/itemChatKirimTvChat"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>